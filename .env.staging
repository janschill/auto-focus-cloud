# Staging Environment Configuration
# Port will be overridden to 8081 in deploy script
PORT=8081

# Stripe Test Environment
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# HMAC Secret (different from production for security)
HMAC_SECRET=staging-hmac-secret-different-from-prod

# Database (separate staging database)
DATABASE_URL=storage/data/autofocus-staging.db

# Email (use test email service or log emails)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=staging@auto-focus.app
SMTP_PASS=your-staging-smtp-password

# Sentry (optional - separate staging project)
SENTRY_DSN=your_staging_sentry_dsn

# Environment identifier
ENVIRONMENT=staging
TEST_MODE=true